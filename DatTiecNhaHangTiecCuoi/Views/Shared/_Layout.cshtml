<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="style.css">
    <!-- Fontawesome CDN Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #cartImage {
            width: 30px; 
        }
    </style>
</head>

<body style="background-color:bisque;">

    <div id="my_" style="width: 100%; height: 50px; position: fixed; top: 0px; left: 0px; z-index: 999; display: flex">
        <div class="navbar-collapse collapse" style="padding: 0px; display: flex">

            <ul class="nav navbar-nav" style="width: 100%; font-weight: bold; display: flex; align-items: center; justify-content: center; ">
                <li style="padding: 7px 15px ;color:#c77408 ;font-size: 2.3rem; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; ">GRAND PALACE</li>
                <li><hr /></li>
                <li>@Html.ActionLink("TRANG CHỦ", "Index", "Home")</li>
                <li>@Html.ActionLink("GIỚI THIỆU", "Gioithieu", "Home")</li>
                <li>@Html.ActionLink("SẢNH TIỆC", "SanhTiec", "Home")</li>
                <li>@Html.ActionLink("MENU", "Menu", "Home")</li>
                <li>@Html.ActionLink("TRANG TRÍ", "Trangtri", "Home")</li>
                <li>@Html.ActionLink("ƯU ĐÃI", "UuDai", "Home")</li>
                <li>@Html.ActionLink("ĐẶT TIỆC", "DatTiec", "DatTiec")</li>
                <li>@Html.ActionLink("DÀNH CHO NHÂN VIÊN", "DangNhap", "NhanVien")</li>
            </ul>
        </div>
    </div>

    <div id="my-element" class="container-fluid" style=" padding-left: 0px; padding-right: 0px;">
        @RenderBody()
    </div>
    <footer style="background-color: burlywood;">
        <div style=" width: 100%; height: auto; text-align:center ; padding: 15px 15px; margin: auto; margin-bottom: -19px;">
            <div>
                <img src="~/Image/logo_GP-removebg-preview.png" />
            </div>
            <p>
                <b>TRUNG TÂM HỘI NGHỊ TIỆC CƯỚI GRAND PALACE</b><br />
                Chi nhánh 2 Công Ty TNHH TM DV Dìn Ký<br />
                MST: 0300176822-002 <br />
                Địa chỉ: 142/18 Cộng Hòa, P.4, Q.Tân Bình, TP.HCM<br />
                Liên lạc: 028 3811 8181 - info@grandpalace.com.vn
            </p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // đổi màu body
        const myElement = document.getElementById('my-element');
        const initialBackgroundColor = myElement.style.backgroundColor;

        window.addEventListener('scroll', () => {
            const scrollPosition = window.scrollY;

            // Set a background color based on the scroll position
            if (scrollPosition > 100) {
                myElement.style.backgroundColor = 'bisque';
            } else {
                myElement.style.backgroundColor = initialBackgroundColor;
            }
        });
        // đổi màu header
        const myElement_ = document.getElementById('my_');
        const initialBackgroundColor_ = myElement_.style.backgroundColor;

        window.addEventListener('scroll', () => {
            const scrollPosition_ = window.scrollY;

            // Set a background color based on the scroll position
            if (scrollPosition_ > 20) {
                myElement_.style.backgroundColor = 'burlywood';
            } else {
                myElement_.style.backgroundColor = initialBackgroundColor_;
            }
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
    <df-messenger intent="WELCOME"
                  chat-title="Grand-Palace-Chatbot"
                  agent-id="bfca597e-fbb4-4f09-9576-84ed94d459fe"
                  language-code="en"></df-messenger>

</body>
</html>
